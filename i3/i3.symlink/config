################################################################################
#                                   i3config                                   #
################################################################################

###############
#  variables  #
###############

set $mod Mod4

set $ws1 workspace 1: main
set $ws2 workspace 2: browser
set $ws3 workspace 3: workspace
set $ws4 workspace 4: term
set $ws5 workspace 5: misc
set $ws6 workspace 6
set $ws7 workspace 7
set $ws8 workspace 8: J + B
set $ws9 workspace 9: mail
set $ws10 workspace 10: processes

set $chrome google-chrome-unstable --disk-cache-dir=/tmp/cache
#
##########################
#  application settings  #
##########################

#for_window [class="Uzbl-core"] focus child, layout stacking,  focus
assign [title="^mutt mail$"] 9: mail


###############
#  autostart  #
###############

exec --no-startup-id urxvtd -q -f -o
exec --no-startup-id pulseaudio --start

exec --no-startup-id i3-msg $ws2; exec $chrome
exec --no-startup-id i3-msg $ws1; exec urxvtc -e ranger
exec --no-startup-id exec urxvtc -title 'mutt mail' -e mutt -n

new_window 1pixel
font pango:Adobe Source Code Pro 10

################
#  power menu  #
################

set $power_menu Power Menu: (e)xit | (l)ock | (s)leep | (r)eboot | shut(d)own
mode "$power_menu" {
	bindsym l exec --no-startup-id i3pm lock; mode "default"
	bindsym e exec --no-startup-id i3pm exit; mode "default"
	bindsym s exec --no-startup-id i3pm suspend; mode "default"
	bindsym d exec --no-startup-id i3pm poweroff; mode "default"
	bindsym r exec --no-startup-id i3pm reboot; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$power_menu"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

#################
#  keybindings  #
#################

# applications
bindsym $mod+u exec uzbl-browser
bindsym $mod+Return exec urxvtc
bindsym $mod+g exec $chrome
bindsym $mod+d exec dmenu_run
bindsym $mod+m exec urxvtc -title 'mutt mail' -e mutt -n; exec i3-msg $ws9

bindsym XF86AudioLowerVolume exec ponymix decrease 5
bindsym XF86AudioRaiseVolume exec ponymix increase 5
bindsym XF86AudioMute exec $(amixer get Master | grep off > /dev/null && amixer -q set Master unmute) || amixer -q set Master mute

bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split mode/layout
bindsym $mod+v split v
bindsym $mod+c split h

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+f fullscreen

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 $ws1
bindsym $mod+2 $ws2
bindsym $mod+3 $ws3
bindsym $mod+4 $ws4
bindsym $mod+5 $ws5
bindsym $mod+6 $ws6
bindsym $mod+7 $ws7
bindsym $mod+8 $ws8
bindsym $mod+9 $ws9
bindsym $mod+0 $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to $ws1
bindsym $mod+Shift+2 move container to $ws2
bindsym $mod+Shift+3 move container to $ws3
bindsym $mod+Shift+4 move container to $ws4
bindsym $mod+Shift+5 move container to $ws5
bindsym $mod+Shift+6 move container to $ws6
bindsym $mod+Shift+7 move container to $ws7
bindsym $mod+Shift+8 move container to $ws8
bindsym $mod+Shift+9 move container to $ws9
bindsym $mod+Shift+0 move container to $ws10

# reload/restart the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#################
#  colorscheme  #
#################

set $BASE00	#181818
set $BASE01	#282828
set $BASE02	#383838
set $BASE03	#585858
set $BASE04	#B8B8B8
set $BASE05	#D8D8D8
set $BASE06	#E8E8E8
set $BASE07	#F8F8F8
set $BASE08	#AB4642
set $BASE09	#DC9656
set $BASE0A	#F7CA88
set $BASE0B	#A1B56C
set $BASE0C	#86C1B9
set $BASE0D	#7CAFC2
set $BASE0E	#BA8BAf
set $BASE0F	#A16946

# background
exec_always --no-startup-id xsetroot -solid '$BASE01'

# clientclass 			border  backgr. text 	indicator
client.focused 			$BASE0B	$BASE0B	$BASE01 $BASE09
client.focused_inactive		$BASE01	$BASE01	$BASE05 $BASE09
client.unfocused  		$BASE03 $BASE03 $BASE05 $BASE09
client.urgent 	 		$BASE08 $BASE08 $BASE05 $BASE09

bar {
	#status_command i3status -c $HOME/.i3/i3status
	status_command $HOME/.i3/conky
	# conky with FontAwesome
	#font pango:FontAwesome 10
	#status_command $HOME/.i3/faconky
	position top
	colors {
		separator	$BASE02
		background	$BASE00
		statusline	$BASE06
		# clientclass		border	backgr	text
		focused_workspace	$BASE01 $BASE01 $BASE0B
		active_workspace	$BASE01 $BASE01 $BASE0C
		inactive_workspace	$BASE01 $BASE01 $BASE05
		urgent_workspace	$BASE08 $BASE08 $BASE01
	}
}
