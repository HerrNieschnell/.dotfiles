################################################################################
#                                   i3config                                   #
################################################################################

###############
#  variables  #
###############

set $mod Mod4

set $ws1 workspace 1: main
set $ws2 workspace 2: browser
set $ws3 workspace 3: workspace
set $ws4 workspace 4: misc
set $ws5 workspace 5
set $ws6 workspace 6
set $ws7 workspace 7
set $ws8 workspace 8: J + B
set $ws9 workspace 9: mail
set $ws10 workspace 10:processes

set $chrome google-chrome-unstable --disk-cache-dir=/tmp/cache
#
##########################
#  application settings  #
##########################

#for_window [class="Uzbl-core"] focus child, layout stacking,  focus
assign [title="^mutt mail$"] 9: mail


###############
#  autostart  #
###############

exec_always --no-startup-id urxvtd -q -f -o
exec_always --no-startup-id pulseaudio --start

exec --no-startup-id i3-msg $ws2; exec $chrome
exec --no-startup-id i3-msg $ws1; exec urxvtc -e ranger
exec --no-startup-id exec urxvtc -title 'mutt mail' -e mutt -n


font pango:Adobe Source Code Pro 10

################
#  power menu  #
################

set $power_menu Power Menu: - (e)xit - (l)ock - (s)leep - (r)eboot - shut(d)own
mode "$power_menu" {
	bindsym l exec --no-startup-id i3pm lock; mode "default"
	bindsym e exec --no-startup-id i3pm exit; mode "default"
	bindsym s exec --no-startup-id i3pm suspend; mode "default"
	bindsym d exec --no-startup-id i3pm poweroff; mode "default"
	bindsym r exec --no-startup-id i3pm reboot; mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$power_menu"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

#################
#  keybindings  #
#################

# applications
bindsym $mod+u exec uzbl-browser
bindsym $mod+Return exec urxvtc
bindsym $mod+g exec $chrome
bindsym $mod+d exec dmenu_run
bindsym $mod+m exec urxvtc -title 'mutt mail' -e mutt -n; exec i3-msg $ws9

bindsym XF86AudioLowerVolume exec ponymix decrease 5
bindsym XF86AudioRaiseVolume exec ponymix increase 5
bindsym XF86AudioMute exec $(amixer get Master | grep off > /dev/null && amixer -q set Master unmute) || amixer -q set Master mute

bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split mode/layout
bindsym $mod+v focus child layout toggle split

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod+f fullscreen

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 $ws1
bindsym $mod+2 $ws2
bindsym $mod+3 $ws3
bindsym $mod+4 $ws4
bindsym $mod+5 $ws5
bindsym $mod+6 $ws6
bindsym $mod+7 $ws7
bindsym $mod+8 $ws8
bindsym $mod+9 $ws9
bindsym $mod+0 $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to $ws1
bindsym $mod+Shift+2 move container to $ws2
bindsym $mod+Shift+3 move container to $ws3
bindsym $mod+Shift+4 move container to $ws4
bindsym $mod+Shift+5 move container to $ws5
bindsym $mod+Shift+6 move container to $ws6
bindsym $mod+Shift+7 move container to $ws7
bindsym $mod+Shift+8 move container to $ws8
bindsym $mod+Shift+9 move container to $ws9
bindsym $mod+Shift+0 move container to $ws10

# reload/restart the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#################
#  colorscheme  #
#################

set $yellow	#f7ca88
set $orange	#dc9656
set $red	#ab4642
set $magenta	#a16946
set $violet	#ba8baf
set $blue	#7cafc2
set $cyan	#86c1b9
set $green	#a1b56c

set $baseA3 #181818
set $baseA2 #282828
set $baseA1 #383838
set $baseA0 #585858
set $baseB0 #b8b8b8
set $baseB1 #d8d8d8
set $baseB2 #e8e8e8
set $baseB3 #f8f8f8

# background
exec_always --no-startup-id xsetroot -solid '$baseA2'

# clientclass 			border  backgr. text 	indicator
client.focused 			$green	$green	$baseB3 $blue
client.focused_inactive		$cyan	$cyan	$baseB2 $violet
client.unfocused  		$baseA2 $baseA2 $baseB1 $baseA1
client.urgent 	 		$yellow $yellow $baseB3 $orange

bar {
	#status_command i3status -c $HOME/.i3/i3status
	status_command $HOME/.i3/conky
	# conky with FontAwesome
	#font pango:FontAwesome 10
	#status_command $HOME/.i3/faconky
	position top
	colors {
		separator $blue
		background $baseA3
		statusline $baseB2

		focused_workspace 		$baseB0 $green  $baseA3
		active_workspace 		$baseB0 $cyan   $baseA2
		inactive_workspace 		$baseB0 $baseA2 $baseB1
		urgent_workspace 		$baseB0 $orange $baseB3
	}
}
